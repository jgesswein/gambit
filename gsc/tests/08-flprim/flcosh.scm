(declare (extended-bindings) (not constant-fold) (not safe))

(define (test a b)
  (let* ((x (##flcosh a))
         (b-small (##fl* 0.9999999999999 b))
         (b-large (##fl* 1.0000000000001 b))
         (lo (##flmin b-small b-large))
         (hi (##flmax b-small b-large)))
    (println (and (##fl>= x lo) (##fl<= x hi)))))

(test   0.0 1.0)
(test  -0.0 1.0)
(test   0.1 1.0050041680558035)
(test   1.0 1.5430806348152437)
(test  -1.0 1.5430806348152437)
(test  10.0 11013.232920103328)
(test -10.0 11013.232920103328)

